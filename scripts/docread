#!/usr/bin/env bash

DIRECTORY="$HOME/dox/books"

if [[ -d $DIRECTORY ]]; then
	CHOSENBOOK=$(ls -A $DIRECTORY |
		sed -e 's/\.[[:alpha:]]*$//' |
		dmenu -i -l 15 -p \
			"What to read..." -nb '#3b4252' -sf '#88c0d0' -sb '#4c566a' -nf '#a89984' -fn 'Mononoki Nerd Font:bold:pixelsize=13')
	if [[ $CHOSENBOOK ]]; then
		zathura $DIRECTORY/$CHOSENBOOK.*
	else
		notify-send "ðŸ’£ Error during oppening the book"
	fi
else
	notify-send "ðŸ’£ Directory doesn't exist"
fi
